{
  "name": "mono-angular",
  "version": "0.0.0",
  "scripts": {
    "postinstall": "simple-git-hooks",
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:demo-app": "node dist/demo-app/server/server.mjs",
    "assets:build": "ts-node ./projects/ui/src/build/runBuild.ts",
    "sb:dev": "ng run ui:storybook",
    "sb:build": "ng run ui:build-storybook"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/platform-server": "^19.2.0",
    "@angular/router": "^19.2.0",
    "@angular/ssr": "^19.2.3",
    "express": "^4.18.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.3",
    "@angular/cli": "^19.2.3",
    "@angular/compiler-cli": "^19.2.0",
    "@chromatic-com/storybook": "^3.2.6",
    "@compodoc/compodoc": "^1.1.26",
    "@storybook/addon-designs": "^8.2.1",
    "@storybook/addon-docs": "^8.6.6",
    "@storybook/addon-essentials": "^8.6.6",
    "@storybook/addon-interactions": "^8.6.6",
    "@storybook/addon-themes": "^8.6.6",
    "@storybook/angular": "^8.6.6",
    "@storybook/blocks": "^8.6.6",
    "@storybook/manager-api": "^8.6.6",
    "@storybook/test": "^8.6.6",
    "@storybook/theming": "^8.6.6",
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.4",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "angular-eslint": "^19.2.1",
    "eslint": "^9.22.0",
    "fs-extra": "^11.3.0",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "nano-staged": "^0.8.0",
    "ng-packagr": "^19.2.0",
    "prettier": "^3.5.3",
    "simple-git-hooks": "^2.11.1",
    "storybook": "^8.6.6",
    "svgo": "^3.3.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.7.2"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  },
  "nano-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ],
    "*.{js,ts,json,css,md,mdx,html}": [
      "prettier --write"
    ]
  }
}
