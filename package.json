{
  "name": "mono-angular",
  "version": "0.0.0",
  "scripts": {
    "ci:env": "ts-node ./build/set-env-ci.ts",
    "init:env-local": "ts-node ./build/set-env-local.ts",
    "init:git-hooks": "simple-git-hooks",
    "init": "npm run init:git-hooks && npm run init:env-local",
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:angular-invoice": "node dist/angular-invoice/server/server.mjs",
    "assets:build": "ts-node ./projects/ui/src/build/runBuild.ts",
    "sb:dev": "ng run ui:storybook",
    "sb:build": "ng run ui:build-storybook",
    "sb:update": "npx storybook@latest upgrade --config-dir=projects/ui/.storybook"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^19.2.6",
    "@angular/compiler": "^19.2.6",
    "@angular/core": "^19.2.6",
    "@angular/forms": "^19.2.6",
    "@angular/platform-browser": "^19.2.6",
    "@angular/platform-browser-dynamic": "^19.2.6",
    "@angular/platform-server": "^19.2.6",
    "@angular/router": "^19.2.6",
    "@angular/ssr": "^19.2.7",
    "@date-fns/tz": "^1.2.0",
    "@floating-ui/dom": "^1.7.0",
    "blob-stream": "^0.1.3",
    "date-fns": "^4.1.0",
    "express": "^5.1.0",
    "jspdf": "^3.0.1",
    "pdfkit": "^0.17.0",
    "pdfmake": "^0.2.18",
    "rxjs": "~7.8.0",
    "to-words": "^4.4.0",
    "tslib": "^2.3.0",
    "zod": "^3.24.3",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.7",
    "@angular/cli": "^19.2.7",
    "@angular/compiler-cli": "^19.2.6",
    "@chromatic-com/storybook": "^3.2.6",
    "@compodoc/compodoc": "^1.1.26",
    "@storybook/addon-designs": "^8.2.1",
    "@storybook/addon-docs": "^9.0.0",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-interactions": "^8.6.12",
    "@storybook/addon-themes": "^8.6.12",
    "@storybook/angular": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/manager-api": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@storybook/theming": "^8.6.12",
    "@types/blob-stream": "^0.1.33",
    "@types/express": "^5.0.2",
    "@types/fs-extra": "^11.0.4",
    "@types/google.accounts": "^0.0.16",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^22.14.1",
    "@types/pdfmake": "^0.2.11",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "angular-eslint": "^19.3.0",
    "eslint": "^9.24.0",
    "fs-extra": "^11.3.0",
    "jasmine-core": "~5.7.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "nano-staged": "^0.8.0",
    "ng-packagr": "^19.2.2",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "simple-git-hooks": "^2.12.1",
    "storybook": "^8.6.12",
    "svgo": "^3.3.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.0"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  },
  "nano-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ],
    "*.{js,ts,json,css,md,mdx,html}": [
      "prettier --write"
    ]
  }
}
