{
  "name": "mono-angular",
  "version": "0.0.0",
  "scripts": {
    "ci:env": "ts-node ./build/set-env-ci.ts",
    "init:env-local": "ts-node ./build/create-local-env.ts",
    "init:git-hooks": "simple-git-hooks",
    "init": "npm run init:git-hooks && npm run init:env-local",
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "assets:build": "ts-node ./projects/ui/src/build/runBuild.ts",
    "sb:start": "ts-node build/run-storybook.ts start",
    "sb:build": "ts-node build/run-storybook.ts build",
    "sb:update": "ts-node build/update-storybook.ts",
    "angular:update": "ts-node build/update-angular.ts"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.15",
    "@angular/compiler": "^20.3.15",
    "@angular/core": "^20.3.15",
    "@angular/forms": "^20.3.15",
    "@angular/platform-browser": "^20.3.15",
    "@angular/platform-browser-dynamic": "^20.3.15",
    "@angular/platform-server": "^20.3.15",
    "@angular/router": "^20.3.15",
    "@angular/ssr": "^20.3.13",
    "@date-fns/tz": "^1.4.1",
    "@floating-ui/dom": "^1.7.4",
    "@justinribeiro/lite-youtube": "^1.9.0",
    "date-fns": "^4.1.0",
    "express": "^5.2.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zod": "^4.1.13",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.13",
    "@angular/cli": "^20.3.13",
    "@angular/compiler-cli": "^20.3.15",
    "@chromatic-com/storybook": "^4.1.3",
    "@compodoc/compodoc": "^1.1.32",
    "@storybook/addon-designs": "^10.0.2",
    "@storybook/addon-docs": "9.1.17",
    "@storybook/addon-themes": "9.1.17",
    "@storybook/angular": "9.1.17",
    "@types/express": "^5.0.6",
    "@types/fs-extra": "^11.0.4",
    "@types/google.accounts": "^0.0.18",
    "@types/jasmine": "^5.1.13",
    "@types/node": "^22.19.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/semver": "^7.7.1",
    "angular-eslint": "^20.2.0",
    "eslint": "^9.39.1",
    "eslint-plugin-storybook": "9.1.17",
    "fs-extra": "^11.3.0",
    "jasmine-core": "^5.13.0",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.0",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "nano-staged": "^0.9.0",
    "ng-packagr": "^20.2.0",
    "prettier": "^3.7.4",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "semver": "^7.7.3",
    "simple-git-hooks": "^2.13.1",
    "storybook": "9.1.17",
    "svgo": "^3.3.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.0"
  },
  "simple-git-hooks": {
    "pre-commit": "./pre-commit.sh"
  },
  "nano-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ],
    "*.{js,ts,json,css,md,mdx,html}": [
      "prettier --write"
    ]
  }
