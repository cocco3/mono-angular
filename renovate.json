{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":dependencyDashboard",
    ":semanticPrefixFixDepsChoreOthers",
    ":ignoreModulesAndTests",
    "packages:linters",
    "replacements:all",
    "workarounds:all",
    "schedule:monthly"
  ],
  "separateMajorMinor": true,
  "commitBody": "[skip netlify]",
  "packageRules": [
    {
      "groupName": "node",
      "matchPackageNames": ["@types/node", "node"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchManagers": ["npm", "nvm"],
      "matchDatasources": ["npm", "nvm"]
    },
    {
      "groupName": "angular",
      "matchPackageNames": [
        "@angular/*",
        "@angular-devkit/*",
        "angular-eslint",
        "rxjs",
        "zone.js",
        "ng-packagr"
      ]
    },
    {
      "groupName": "react",
      "matchPackageNames": [
        "react",
        "react-dom",
        "@types/react",
        "@types/react-dom"
      ]
    },
    {
      "groupName": "storybook",
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": [
        "storybook",
        "@storybook/*",
        "eslint-plugin-storybook",
        "@chromatic-com/storybook",
        "@compodoc/compodoc"
      ]
    },
    {
      "groupName": "linting",
      "matchPackageNames": ["eslint", "prettier"]
    },
    {
      "groupName": "testing",
      "matchPackageNames": ["jasmine-core", "@types/jasmine", "karma*"]
    },
    {
      "groupName": "git hooks",
      "matchPackageNames": ["nano-staged", "simple-git-hooks"]
    },
    {
      "groupName": "fs-extra",
      "matchPackageNames": ["fs-extra", "@types/fs-extra"]
    },
    {
      "groupName": "typescript",
      "matchPackageNames": ["typescript", "ts-node", "tslib"]
    },
    {
      "groupName": "date-fns",
      "matchPackageNames": ["date-fns", "@date-fns/*"]
    },
    {
      "groupName": "GitHub Actions",
      "matchManagers": ["github-actions"],
      "matchPackageNames": ["/^actions/.*/", "/^peaceiris/actions-gh-pages/"]
    }
  ]
}
